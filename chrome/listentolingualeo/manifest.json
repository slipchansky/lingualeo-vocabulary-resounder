{
  "name": "Listen to Lingua Leo",
  "version": "1.1",
  "description": "Downloads your vocabulary from lingualeo.com in form of bunch of mp3 files",
  "permissions": [
    "cookies", "tabs", "*://*/*"
  ],
  "browser_action": {
      "default_title": "LinguaLeo-MP3",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
